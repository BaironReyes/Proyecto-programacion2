<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.proyecto.FacturacionController"
            prefWidth="1000" prefHeight="600">

    <HBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <!-- Panel Izquierdo: Reservas Pendientes -->
        <VBox spacing="10" prefWidth="480">
            <Label text="Reservas Pendientes" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TableView fx:id="tablaReservas" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colIdReserva" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colIdCliente" text="Cliente" prefWidth="100"/>
                    <TableColumn fx:id="colIdHabitacion" text="HabitaciÃ³n" prefWidth="100"/>
                    <TableColumn fx:id="colCheckIn" text="Check In" prefWidth="100"/>
                    <TableColumn fx:id="colCheckOut" text="Check Out" prefWidth="100"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                </columns>
            </TableView>
            <Button fx:id="btnGenerarFactura" text="Generar Factura" onAction="#generarFactura" prefWidth="200"/>
        </VBox>

        <!-- Panel Derecho: Facturas -->
        <VBox spacing="10" prefWidth="480">
            <Label text="Facturas Existentes" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TableView fx:id="tablaFacturas" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colFacturaId" text="ID Factura" prefWidth="100"/>
                    <TableColumn fx:id="colFacturaReserva" text="Reserva" prefWidth="100"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
                    <TableColumn fx:id="colPagado" text="Pagado" prefWidth="80"/>
                </columns>
            </TableView>
            <HBox spacing="10">
                <Button fx:id="btnMarcarPagado" text="Marcar como Pagado" onAction="#marcarComoPagada" prefWidth="200"/>
                <Button fx:id="btnReporteIngresos" text="Generar Reporte" onAction="#generarReporteIngresos" prefWidth="200"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
