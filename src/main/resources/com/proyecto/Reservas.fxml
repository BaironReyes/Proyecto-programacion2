<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.ReservasController"
      style="-fx-padding: 20; -fx-background-color: #1D1D1D;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sistema de Reservas"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>

    <VBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-padding: 20; -fx-background-color: #272727; -fx-border-color: #333333; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 15, 0, 0, 5);">

        <Label text="Nueva Reserva"
               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <ComboBox fx:id="cmbClientes" promptText="Seleccionar Cliente" prefWidth="250"
                      style="-fx-background-color: #FFFFFF; -fx-text-fill: #FFFFFF; -fx-font-family: 'Serif';"/>
            <ComboBox fx:id="cmbHabitaciones" promptText="Seleccionar Habitación" prefWidth="250"
                      style="-fx-background-color: #FFFFFF; -fx-text-fill: #FFFFFF; -fx-font-family: 'Serif';"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <DatePicker fx:id="dpCheckIn" promptText="Check-in" prefWidth="180"
                        style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0;"/>
            <DatePicker fx:id="dpCheckOut" promptText="Check-out" prefWidth="180"
                        style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0;"/>
            <Label fx:id="lblNoches" text="Noches: 0"
                   style="-fx-text-fill: #E8E0D0; -fx-font-family: 'Serif'; -fx-padding: 5 0 0 20;"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Precio por noche:" style="-fx-text-fill: #E8E0D0; -fx-font-family: 'Serif';"/>
            <Label fx:id="lblPrecioNoche" text="0$"
                   style="-fx-text-fill: #89785C; -fx-font-weight: bold; -fx-font-family: 'Serif';"/>
            <Label text="Total estimado:" style="-fx-text-fill: #E8E0D0; -fx-font-family: 'Serif'; -fx-padding: 0 0 0 20;"/>
            <Label fx:id="lblTotal" text="0$"
                   style="-fx-text-fill: #89785C; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Serif';"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="Crear Reserva" onAction="#crearReserva"
                    style="-fx-background-color: #615541; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>
            <Button text="Ver Disponibilidad" onAction="#verDisponibilidad"
                    style="-fx-background-color: #3A3129; -fx-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-background-radius: 4;"/>
        </HBox>
    </VBox>

    <!-- Tabla de reservas -->
    <TableView fx:id="tablaReservas" prefHeight="300"
               style="-fx-background-color: #272727; -fx-border-color: #333333;">
        <columns>
            <TableColumn fx:id="colId" text="ID Reserva" prefWidth="80" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn fx:id="colIdCliente" text="ID Cliente" prefWidth="80" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn fx:id="colIdHabitacion" text="ID Habitación" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn fx:id="colCheckIn" text="Check-in" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn fx:id="colCheckOut" text="Check-out" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
        </columns>
    </TableView>

    <Button text="Volver al Dashboard" onAction="#volverAlDashboard"
            style="-fx-background-color: #3A3129; -fx-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>

</VBox>