<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.GestionHabitacionesController"
      style="-fx-padding: 20; -fx-background-color: #1D1D1D;">

    <!-- Título -->
    <Label text="Gestión de Habitaciones"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>

    <!-- Formulario -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="txtNumero" promptText="Número Habitación" prefWidth="150"
                   style="-fx-background-color: #272727; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #333333; -fx-border-radius: 4;"/>
        <ComboBox fx:id="cmbTipo" promptText="Tipo" prefWidth="120"
                  style="-fx-background-color: #272727; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif';"/>
        <TextField fx:id="txtPrecio" promptText="Precio" prefWidth="100"
                   style="-fx-background-color: #272727; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #333333; -fx-border-radius: 4;"/>
        <ComboBox fx:id="cmbEstado" promptText="Estado" prefWidth="130"
                  style="-fx-background-color: #272727; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif';"/>
        <Button text="Agregar" onAction="#agregarHabitacion"
                style="-fx-background-color: #615541; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tablaHabitaciones" prefHeight="300"
               style="-fx-background-color: #272727; -fx-border-color: #333333;">
        <columns>
            <TableColumn text="ID" prefWidth="50" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Número" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Tipo" prefWidth="120" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Precio" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Estado" prefWidth="120" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
        </columns>
    </TableView>

    <!-- Botón volver -->
    <Button text="Volver al Dashboard" onAction="#volverAlDashboard"
            style="-fx-background-color: #3A3129; -fx-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>

</VBox>