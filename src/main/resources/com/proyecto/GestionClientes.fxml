<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.GestionClientesController"
      style="-fx-padding: 20; -fx-background-color: #1D1D1D;">

    <!-- Título -->
    <Label text="Gestión de Clientes"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>

    <!-- Formulario -->
    <VBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-padding: 20; -fx-background-color: #272727; -fx-border-color: #333333; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 15, 0, 0, 5);">

        <Label text="Nuevo Cliente"
               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="txtNombre" promptText="Nombre" prefWidth="150"
                       style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #615541; -fx-border-radius: 4;"/>
            <TextField fx:id="txtApellido" promptText="Apellido" prefWidth="150"
                       style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #615541; -fx-border-radius: 4;"/>
            <TextField fx:id="txtEmail" promptText="Email" prefWidth="200"
                       style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #615541; -fx-border-radius: 4;"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="txtTelefono" promptText="Teléfono" prefWidth="150"
                       style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #615541; -fx-border-radius: 4;"/>
            <TextField fx:id="txtIdentificacion" promptText="Identificación" prefWidth="150"
                       style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-prompt-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-border-color: #615541; -fx-border-radius: 4;"/>
            <ComboBox fx:id="cmbTipoIdentificacion" promptText="Tipo ID" prefWidth="120"
                      style="-fx-background-color: #333333; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif';"/>
            <Button text="Agregar Cliente" onAction="#agregarCliente"
                    style="-fx-background-color: #615541; -fx-text-fill: #E8E0D0; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>
        </HBox>
    </VBox>

    <!-- Tabla -->
    <TableView fx:id="tablaClientes" prefHeight="300"
               style="-fx-background-color: #272727; -fx-border-color: #333333;">
        <columns>
            <TableColumn text="ID" prefWidth="50" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Nombre" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Apellido" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Email" prefWidth="150" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Teléfono" prefWidth="100" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Identificación" prefWidth="120" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
            <TableColumn text="Tipo ID" prefWidth="80" style="-fx-text-fill: #89785C; -fx-font-family: 'Serif';"/>
        </columns>
    </TableView>

    <!-- Botón volver -->
    <Button text="Volver al Dashboard" onAction="#volverAlDashboard"
            style="-fx-background-color: #3A3129; -fx-text-fill: #89785C; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-background-radius: 4;"/>

</VBox>